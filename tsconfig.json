{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
