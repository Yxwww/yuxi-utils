{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "!src/**/*.test.ts"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:typing": {
      "dependsOn": ["^build:typing"],
      "inputs": ["src/**/*.ts", "!src/**/*.test.ts"],
      "outputs": [
        "dist/**/*.d.ts",
        "dist/**/*.d.ts.map",
        "dist/tsconfig.tsbuildinfo"
      ],
      "cache": true
    },
    "build:esm": {
      "dependsOn": ["^build:esm"],
      "inputs": ["src/**/*.ts", "!src/**/*.test.ts"],
      "outputs": ["dist/esm/**"],
      "cache": true
    },
    "build:cjs": {
      "dependsOn": ["^build:cjs"],
      "inputs": ["src/**/*.ts", "!src/**/*.test.ts"],
      "outputs": ["dist/cjs/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "vitest.config.js"],
      "outputs": [],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "coverage": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "vitest.config.js"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "lint": {
      "inputs": ["src/**/*.ts", ".eslintrc.js"],
      "outputs": [],
      "cache": true
    }
  }
}
